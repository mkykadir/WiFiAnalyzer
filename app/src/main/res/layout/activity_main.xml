<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="tryucelmuh.edu.itu.web.wifianalyzer.MainActivity">

   <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/wifiNameList"
        android:minHeight="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        />

  <LinearLayout
      android:id="@+id/secondLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

   <EditText
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:inputType="text"
       android:ems="10"
       android:id="@+id/tanimText"
       android:hint="@string/tanimHint"
       android:maxLines="1" />

   <Button
       android:text="@string/analyzebutton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/analyzeButton"
       android:onClick="analyzeWifi"
       />

  </LinearLayout>

  <ExpandableListView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/logsList"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

   <Button
       android:text="@string/saveSql"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/saveSqlButton"
       android:onClick="exportData"
       android:layout_weight="1"/>

   <Button
       android:text="@string/clearList"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/clearListButton"
       android:textAlignment="center"
       android:onClick="clearData"
       android:layout_weight="1"/>

  </LinearLayout>
</LinearLayout>
